/* pages/game/game.wxss */
.head {
  width: 100%;
  height: 136rpx;
  font-size: 0;
  position:relative;
}
.head view {
  display: inline-block;
  vertical-align: top;
}
.head .score {
  width: 160rpx;
  font: 36rpx/136rpx "微软雅黑";
  color: #fff;
  opacity: 0.7;
  margin-left: 16rpx;
}
.head .time {
  width: 96rpx;
  height: 60rpx;
  margin-left: 156rpx;
  margin-top: 38rpx;
  font: 28rpx/60rpx "arial";
  color: #fff;
  font-weight: 200;
  background: rgba(255,255,255,0.3);
  text-align: center;
  border-radius: 6rpx;
}
.head .suspend {
  display: inline-block;
  vertical-align: top;
  position: absolute;
  right: 16rpx;
  top: 28rpx;
  width: 152rpx;
  height: 74rpx;
  font: 32rpx/74rpx "arial";
  color: #fff;
  font-weight: 200;
  background: #fcad26;
  text-align: center;
  border-radius: 6rpx;
}
.head .suspend-active {
  background: #f3a51f;
}

.game-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 20rem;
  height: 20rem;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;

}
.game-box view {
  display: inline-block;
  box-sizing: border-box;
  background: rgb(78,157,0);
  border: 6rpx solid #fff;
  border-radius: 30rpx;
}
.game-box .w2 {
  width: 9.8rem;
  height: 9.8rem;
}
.game-box .w3 {
  width: 6.533rem;
  height: 6.533rem;
}
.game-box .w4 {
  width: 4.9rem;
  height: 4.9rem;
}
.game-box .w5 {
  width: 3.92rem;
  height: 3.92rem;
}
.game-box .w6 {
  width: 3.266rem;
  height: 3.266rem;
}
.game-box .w7 {
  width: 2.857rem;
  height: 2.857rem;
}
.game-box .w8 {
  width: 2.5rem;
  height: 2.5rem;
}
.game-box .w9 {
  width: 2.22222rem;
  height: 2.22222rem;
}
.game-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: palegreen;
  text-align: center;
  background: #f06060;
}

.game-mask .msg {
  font: 64rpx/600rpx "微软雅黑";
  color: #fff;
  font-weight: 400;
}
.game-mask .btn {
  width: 560rpx;
  margin-top: 240rpx;
  color: #fff;
  background: #fcad26;
  border-radius: 10rpx;
}
.game-mask .btn-active {
  background: #f3a51f;
}